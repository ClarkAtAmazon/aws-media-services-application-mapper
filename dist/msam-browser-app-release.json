{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Media Services Application Mapper (MSAM) browser application (ID: 1553977322)",
    "Resources": {
        "MSAMBrowserAppBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {}
        },
        "MSAMWebBucketLoaderRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"],
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "lambda.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                },
                "Policies": [{
                    "PolicyName": "MSAMWebBucketLoaderRolePolicy",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Sid": "VisualEditor0",
                            "Effect": "Allow",
                            "Action": [
                                "s3:PutObject",
                                "s3:ListBucket",
                                "s3:DeleteObject",
                                "s3:PutObjectAcl"
                            ],
                            "Resource": "*"
                        }]
                    }
                }]
            }
        },
        "MSAMWebContentResource": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [
                                "rodeolabz",
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "msam/webcontent_resource_1553977322.zip"
                },
                "Environment": {
                    "Variables": {
                        "BUILD_STAMP": "1553977322",
                        "ZIP_DIGEST": "cbb1b9c62eb3ccb55b6131f396e0c45c230ab00a"
                    }
                },
                "Handler": "lambda_function.lambda_handler",
                "Description": "MSAM Lambda for custom CloudFormation resource for loading web application",
                "MemorySize": 2560,
                "Role": {
                    "Fn::GetAtt": [
                        "MSAMWebBucketLoaderRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "MSAMWebContent": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "MSAMWebContentResource",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "StackName": {
                    "Ref": "AWS::StackName"
                },
                "BUILD_STAMP": "1553977322",
                "ZIP_DIGEST": "cbb1b9c62eb3ccb55b6131f396e0c45c230ab00a"
            }
        }
    },
    "Outputs": {
        "MSAMBrowserURL": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://",
                        {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        ".s3.amazonaws.com/index.html"
                    ]
                ]
            },
            "Description": "URL for the MSAM browser application"
        }
    }
}
